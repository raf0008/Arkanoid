<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/newGame"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:onClick="startGame"
        android:text="New Game"
        android:textColor="@color/text_button_color_option"
        app:layout_constraintBottom_toTopOf="@+id/levels"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/levels"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="24dp"
        android:onClick="selectLevel"
        android:text="Levels"
        android:textColor="@color/text_button_color_option"
        android:background="@drawable/transparent_bg_bordered_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continueGame"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="91dp"
        android:onClick="continueGame"
        android:text="Continue"
        android:textColor="@color/text_button_color_option"
        android:background="@drawable/transparent_bg_bordered_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newGame" />

    <Button
        android:id="@+id/highScore"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="24dp"
        android:onClick="highScoreView"
        android:text="High Score"
        android:textColor="@color/text_button_color_option"
        android:background="@drawable/transparent_bg_bordered_button"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="24dp"
        android:onClick="exitApp"
        android:text="Exit"
        android:textColor="@color/text_button_color_option"
        android:background="@drawable/transparent_bg_bordered_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>